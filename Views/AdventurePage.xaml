<Page x:Class="DnDToolkit.Views.AdventurePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDToolkit.Views"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:DnDToolkit.ViewModels"
      xmlns:helpers="clr-namespace:DnDToolkit.Helpers"
      xmlns:models="clr-namespace:DnDToolkit.Models"
      mc:Ignorable="d" 
      d:DesignHeight="702" d:DesignWidth="1080"
      d:DataContext="{d:DesignInstance vm:AdventureViewModel}"
      Title="AdventurePage">

    <Page.Resources>
        <helpers:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
        <helpers:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <helpers:SumConverter x:Key="SumConverter"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource ui:TextFillColorSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1. 顶栏 (保持精简) -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="当前冒险者：" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource ui:TextFillColorSecondaryBrush}"/>
                <ComboBox Width="250" ItemsSource="{Binding AllCharacters}" SelectedItem="{Binding CurrentCharacter, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Character}">
                            <StackPanel Margin="5,2">
                                <TextBlock Text="{Binding Profile.CharacterName, TargetNullValue='未命名'}" FontWeight="SemiBold" FontSize="14"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Profile.Race}" FontSize="11" Foreground="Gray"/>
                                    <TextBlock Text=" | " FontSize="11" Foreground="Gray" Margin="4,0"/>
                                    <TextBlock Text="{Binding Profile.ClassAndLevel}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <TextBlock Grid.Column="1" Text="暂无角色" Foreground="#FF6B6B" VerticalAlignment="Center" Margin="15,0,0,0"
                       Visibility="{Binding AllCharacters.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Inverse}"/>

            <!-- 右侧：保存按钮 -->
            <!-- 仅当选中了角色时显示 (绑定 CurrentCharacter 的可见性) -->
            <ui:Button Grid.Column="2" 
                       Content="保存状态" 
                       Icon="{ui:SymbolIcon Save24}" 
                       Appearance="Primary"
                       Command="{Binding SaveStateCommand}"
                       Visibility="{Binding AllCharacters.Count, Converter={StaticResource IntToVisibilityConverter}}"/>
        </Grid>

        <!-- 2. 两栏式内容 (移除右侧栏) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="330"/>
                <!-- 左侧：状态 -->
                <ColumnDefinition Width="*"/>
                <!-- 右侧：控制台 (原中间) -->
            </Grid.ColumnDefinitions>

            <!-- ================= 左侧：状态与资源 (基本保持不变) ================= -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <!-- 生命值 -->
                <ui:Card Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="当前生命值 / 最大生命值" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ui:NumberBox Grid.Column="0" Value="{Binding CurrentCharacter.Combat.HitPointsCurrent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Minimum="0"/>
                            <TextBlock Grid.Column="1" Text="/" VerticalAlignment="Center" Margin="5,0"/>
                            <TextBlock Grid.Column="2" Text="{Binding CurrentCharacter.Combat.HitPointsMax}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="临时生命值" Grid.Row="1" FontSize="10" Foreground="Gray"/>
                            <ui:NumberBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                          Value="{Binding CurrentCharacter.Combat.HitPointsTemp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Minimum="0"/>
                        </Grid>
                        <Grid Height="6" VerticalAlignment="Center">
                            <!-- 底层：显示 [当前+临时] 总量，颜色为金色 -->
                            <ProgressBar Foreground="SkyBlue" 
                                         Background="#E0E0E0" 
                                         BorderThickness="0">
                                <ProgressBar.Maximum>
                                    <MultiBinding Converter="{StaticResource SumConverter}">
                                        <Binding Path="CurrentCharacter.Combat.HitPointsMax" />
                                        <Binding Path="CurrentCharacter.Combat.HitPointsTemp" />
                                    </MultiBinding>
                                </ProgressBar.Maximum>
                                <ProgressBar.Value>
                                    <MultiBinding Converter="{StaticResource SumConverter}">
                                        <Binding Path="CurrentCharacter.Combat.HitPointsCurrent" />
                                        <Binding Path="CurrentCharacter.Combat.HitPointsTemp" />
                                    </MultiBinding>
                                </ProgressBar.Value>
                            </ProgressBar>

                            <!-- 顶层：显示 [当前HP]，背景透明以便透出底层的金色 -->
                            <ProgressBar Value="{Binding CurrentCharacter.Combat.HitPointsCurrent}" 
                                         Foreground="#FF6B6B" 
                                         Background="Transparent" 
                                         BorderThickness="0">
                                <ProgressBar.Maximum>
                                    <MultiBinding Converter="{StaticResource SumConverter}">
                                        <Binding Path="CurrentCharacter.Combat.HitPointsMax" />
                                        <Binding Path="CurrentCharacter.Combat.HitPointsTemp" />
                                    </MultiBinding>
                                </ProgressBar.Maximum>
                            </ProgressBar>
                        </Grid>

                    </StackPanel>
                </ui:Card>

                <!-- 战斗核心 -->
                <ui:Card Margin="0,0,0,15">
                    <UniformGrid Columns="2">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="AC" Foreground="Gray"/>
                            <TextBlock Text="{Binding CurrentCharacter.Combat.ArmorClass}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="速度" Foreground="Gray"/>
                            <TextBlock Text="{Binding CurrentCharacter.Combat.Speed}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="先攻" Foreground="Gray"/>
                            <TextBlock Text="{Binding CurrentCharacter.Combat.Initiative, StringFormat='{}{0:+0;-0;0}'}" FontSize="16"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="生命骰" Foreground="Gray"/>
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" Text="{Binding CurrentCharacter.Combat.HitDiceCurrent}" ClearButtonEnabled="False"/>
                                <TextBlock Grid.Column="1" Text="/" VerticalAlignment="Center" Margin="5,0"/>
                                <TextBlock Grid.Column="2" Text="{Binding CurrentCharacter.Combat.HitDiceTotal}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </UniformGrid>
                </ui:Card>

                <!-- 法术位 -->
                <ui:CardExpander Header="法术位状态" Icon="{ui:SymbolIcon Wand24}">
                    <ItemsControl ItemsSource="{Binding CurrentCharacter.Spellbook.AllSpells}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5" Visibility="{Binding Level, Converter={StaticResource IntToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding LevelLabel}" VerticalAlignment="Center"/>
                                    <ui:NumberBox Grid.Column="1" Value="{Binding RemainSlots, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock Grid.Column="2" Text="/" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalSlots}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ui:CardExpander>
            </StackPanel>

            <!-- ================= 右侧：掷骰控制台 (完全重构) ================= -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 操作面板 -->
                    <RowDefinition Height="*"/>
                    <!-- 日志流 -->
                </Grid.RowDefinitions>

                <ui:Card Grid.Row="0" Margin="0,0,0,15" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 分类标签 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 具体的选择区域 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 分割线 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 公共执行区域 -->
                        </Grid.RowDefinitions>

                        <!-- 1. 动作分类 Tab -->
                        <TabControl Grid.Row="0" Grid.RowSpan="2" MinHeight="220">
                            <!-- TAB: 自由 -->
                            <TabItem Header="自由检定">
                                <StackPanel VerticalAlignment="Center" Margin="10">
                                    <TextBlock Text="自由检定配置" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <ui:TextBlock Grid.Column="0" Grid.Row="0" 
                                                      Text="掷骰类型" FontSize="10" Foreground="Gray"/>
                                        <ComboBox Grid.Column="0" Grid.Row="1"
                                                  ItemsSource="{Binding DiceOptions}" 
                                                  SelectedItem="{Binding SelectedDiceSides}"/>
                                        <ui:TextBlock Grid.Column="2" Grid.Row="0" 
                                                   Text="掷骰次数" FontSize="10" Foreground="Gray"/>
                                        <ui:NumberBox Grid.Column="2"  Grid.Row="1"
                                                      Value="{Binding DiceCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Minimum="1"/>
                                    </Grid>
                                    <ui:Button Content="自由检定" Appearance="Secondary" HorizontalAlignment="Stretch" Margin="0,5,0,0"
                                               Command="{Binding SetActionCommand}"
                                               CommandParameter="{Binding FreeRollOption}"/>
                                </StackPanel>
                            </TabItem>

                            <!-- TAB: 属性 & 豁免 -->
                            <TabItem Header="属性/豁免检定">
                                <Grid Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 属性列 -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="属性检定" FontWeight="SemiBold" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                                        <ItemsControl ItemsSource="{Binding AttributeOptions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ui:Button Content="{Binding Name}" 
                                                               Command="{Binding DataContext.SetActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                               CommandParameter="{Binding}"
                                                               HorizontalAlignment="Stretch"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- 豁免列 -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="豁免检定" FontWeight="SemiBold" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                                        <ItemsControl ItemsSource="{Binding SaveOptions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ui:Button Content="{Binding Name}" 
                                                               Command="{Binding DataContext.SetActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                               CommandParameter="{Binding}"
                                                               HorizontalAlignment="Stretch"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- TAB: 技能 -->
                            <TabItem Header="技能检定">
                                <!-- 使用 WrapPanel 或 UniformGrid 显示大量技能 -->
                                <ItemsControl ItemsSource="{Binding SkillOptions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ui:Button Content="{Binding Name}" FontSize="11"
                                                       Command="{Binding DataContext.SetActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                       CommandParameter="{Binding}"
                                                       HorizontalAlignment="Stretch"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </TabItem>

                            <!-- TAB: 战斗 -->
                            <TabItem Header="其它检定">
                                <StackPanel Margin="0,10">
                                    <ItemsControl ItemsSource="{Binding OtherOptions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ui:Button Content="{Binding Name}" 
                                                           Command="{Binding DataContext.SetActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                           CommandParameter="{Binding}"
                                                           HorizontalAlignment="Stretch"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </TabItem>
                        </TabControl>

                        <!-- 分割线 -->
                        <Separator Grid.Row="2" Background="{DynamicResource CardStrokeColorDefaultBrush}" Margin="0"/>

                        <!-- 4. 公共执行区域 (Dashboard) -->
                        <StackPanel Grid.Row="3" Margin="15">

                            <!-- 当前选中的动作显示 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Symbol="TargetArrow24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource SystemAccentColorBrush}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="当前行动" FontSize="10" Foreground="Gray"/>
                                    <TextBlock Text="{Binding SelectedAction.Name}" FontSize="16" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>

                            <!-- 核心参数行 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 基础加值 (只读) -->
                                <ui:TextBlock  Grid.Column="0" Grid.Row="0"
                                               Text="基础加值" FontSize="10" Foreground="Gray"/>
                                <Border Grid.Column="0" Grid.Row="1"
                                        BorderThickness="1" CornerRadius="5" BorderBrush="LightGray">
                                    <ui:TextBlock Text="{Binding CurrentBaseModifier, StringFormat='{}{0:+0;-0;0}'}"
                                                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Grid.Row="1" 
                                           Text="+" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>

                                <!-- 额外加值 (可填) -->
                                <ui:TextBlock Grid.Column="2" Grid.Row="0" 
                                              Text="额外加值" FontSize="10" Foreground="Gray"/>
                                <ui:NumberBox Grid.Column="2" Grid.Row="1"
                                              Value="{Binding CustomModifier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="额外加值"/>

                                <!-- 优劣势 -->
                                <StackPanel Grid.Column="4" Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <RadioButton Content="正常" IsChecked="True" GroupName="Adv2"/>
                                        <RadioButton Content="优势" IsChecked="{Binding IsAdvantage}" GroupName="Adv2"/>
                                        <RadioButton Content="劣势" IsChecked="{Binding IsDisadvantage}" GroupName="Adv2"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <!-- ROLL 按钮 -->
                            <ui:Button Content="执行检定 (ROLL)" Icon="{ui:SymbolIcon Checkmark24}" 
                                       Appearance="Primary" HorizontalAlignment="Stretch" Height="50" FontSize="18"
                                       Command="{Binding ExecuteRollCommand}"/>
                        </StackPanel>
                    </Grid>
                </ui:Card>

                <!-- 日志列表 -->
                <Border Grid.Row="1" Background="{DynamicResource ui:ControlFillColorDefaultBrush}" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource ui:CardStrokeColorDefaultBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="10">
                            <TextBlock Text="记录" FontWeight="SemiBold"/>
                            <ui:Button Content="清空" Appearance="Transparent" HorizontalAlignment="Right" Padding="5,0"
                                       Command="{Binding ClearLogsCommand}"/>
                        </Grid>

                        <ui:ListView Grid.Row="1" ItemsSource="{Binding RollLogs}" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ui:CardStrokeColorDefaultBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Details}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Result}" 
                                                           Foreground="{Binding Color}" 
                                                           FontSize="24" FontWeight="Bold" 
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding Time}" Foreground="LightGray" FontSize="10" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
