<Page x:Class="DnDToolkit.Views.ResourcesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDToolkit.Views"
      xmlns:vm="clr-namespace:DnDToolkit.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=vm:ResourcesViewModel}"
      Title="ResourcesPage">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="资源下载" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="点击右侧按钮下载文件到本地" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1">

            <!-- PDF 下载卡片 -->
            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Symbol="DocumentPdf24" FontSize="32" Margin="0,0,15,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="角色卡PDF" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="本软件使用的角色卡PDF" Foreground="Gray"/>
                    </StackPanel>

                    <ui:Button Grid.Column="2" Appearance="Primary" Icon="{ui:SymbolIcon ArrowDownload24}"
                               Command="{Binding DownloadFileCommand}" 
                               CommandParameter="Character.pdf"
                               Content="下载"/>
                </Grid>
            </ui:Card>

            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Symbol="BookTheta24" FontSize="32" Margin="0,0,15,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="5E不全书" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="5E.v2024.8.11.chm 包含5E 2014规则及各类资源" Foreground="Gray"/>
                    </StackPanel>

                    <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Globe24}"
                               Command="{Binding OpenLinkCommand}" 
                               CommandParameter="https://github.com/DND5eChm/DND5e_chm/releases/tag/v2024.8.11"
                               Content="访问"/>
                </Grid>
            </ui:Card>

            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Symbol="BookTheta24" FontSize="32" Margin="0,0,15,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="5E不全书" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="DND.v2025.11.08.chm 包含5E 2024规则 + 各类资源以及2014旧版规则 + 各类资源" Foreground="Gray"/>
                    </StackPanel>

                    <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Globe24}"
                               Command="{Binding OpenLinkCommand}" 
                               CommandParameter="https://github.com/DND5eChm/DND5e_chm/releases/tag/v2025.11.08"
                               Content="访问"/>
                </Grid>
            </ui:Card>

        </StackPanel>
    </Grid>
</Page>
