<Page x:Class="DnDToolkit.Views.SyncPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:DnDToolkit.ViewModels"
      xmlns:helpers="clr-namespace:DnDToolkit.Helpers"
      xmlns:local="clr-namespace:DnDToolkit.Views"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance vm:SyncViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SyncPage">

    <Page.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- 反转 Boolean 转换器 (如果没有现成的，可以用 Binding 技巧或写一个) -->
    </Page.Resources>

    <StackPanel Margin="20">
        <!-- 标题 -->
        <Grid Margin="10">
            <StackPanel>
                <TextBlock Text="跨设备同步" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="在局域网内与移动设备传输数据" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            <!-- 调试模式开关 (右上角) -->
            <ui:ToggleSwitch IsChecked="{Binding IsDebugMode}" Content="调试模式" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        </Grid>

        <!-- 1. 核心功能区 (常驻) -->
        <ui:Card VerticalAlignment="Top" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：PIN码和IP -->
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <!-- 注：如果没有 Badge 控件，用 Border 画个圆点即可 -->
                        <TextBlock Text="{Binding StatusText}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="连接码 (PIN)" FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding PinCode}" FontSize="60" FontWeight="Bold" FontFamily="Consolas"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border Width="1" Background="{DynamicResource CardStrokeColorDefaultBrush}" Margin="0,5"/>
                        <TextBlock Text="IP 地址" FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ServerIp}" FontSize="20" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- 右侧：大开关 -->
                <ui:Button Grid.Column="1" 
                           Command="{Binding ToggleServiceCommand}"
                           Height="60" Width="160" Margin="5"
                           Icon="{ui:SymbolIcon Power24}"
                           Appearance="Primary">
                    <TextBlock Text="{Binding BtnText}" FontSize="16" FontWeight="Bold"/>
                </ui:Button>
            </Grid>
        </ui:Card>

        <!-- 2. 故障修复区 (仅出错时显示) -->
        <ui:Card Background="#FFF4F4" BorderBrush="#FFCDCD" Margin="10"
                 Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:SymbolIcon Symbol="Warning24" Foreground="#D13438" FontSize="24" Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="遇到连接问题" FontWeight="Bold" Foreground="#D13438"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#D13438" FontSize="12"/>
                </StackPanel>

                <ui:Button Grid.Column="2" 
                           Content="尝试修复防火墙" 
                           Icon="{ui:SymbolIcon Shield24}" 
                           Appearance="Danger"
                           Command="{Binding FixFirewallCommand}"/>
            </Grid>
        </ui:Card>

        <!-- 3. 已配对设备列表 -->
        <StackPanel Margin="10">
            <TextBlock Text="已配对设备" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <ui:Card Padding="0">
                <ui:ListView ItemsSource="{Binding DevicesList}" SelectionMode="Multiple">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon Symbol="Phone24" FontSize="24" Margin="0,0,15,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding DeviceName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LastConnected, StringFormat='上次连接: {0:yyyy-MM-dd HH:mm}'}" 
                                               FontSize="11" Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>

                                <!-- 删除按钮 -->
                                <ui:Button Grid.Column="2" 
                                           Icon="{ui:SymbolIcon Delete16}" 
                                           Appearance="Transparent"
                                           ToolTip="取消配对"
                                           Command="{Binding DataContext.DeleteDeviceCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                           CommandParameter="{Binding}"/>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                    <!-- 空状态 -->
                    <ui:ListView.Style>
                        <Style TargetType="ui:ListView" BasedOn="{StaticResource {x:Type ui:ListView}}">
                            <Style.Triggers>
                                <Trigger Property="HasItems" Value="False">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Text="暂无配对设备，请在手机端连接" 
                                                           HorizontalAlignment="Center" Margin="20" 
                                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ui:ListView.Style>
                </ui:ListView>
            </ui:Card>
        </StackPanel>

        <!-- 4. 调试日志 (仅 Debug 模式显示) -->
        <StackPanel Visibility="{Binding IsDebugMode, Converter={StaticResource BoolToVis}}" Margin="10">
            <TextBlock Text="调试日志" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ui:Card Padding="0" Height="200" VerticalAlignment="Top">
                <ListView ItemsSource="{Binding Logs}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11" Margin="5,2"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ui:Card>
        </StackPanel>
    </StackPanel>
</Page>
