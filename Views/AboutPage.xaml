<Page x:Class="DnDToolkit.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDToolkit.Views"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:DnDToolkit.ViewModels"
      xmlns:helper="clr-namespace:DnDToolkit.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="702" d:DesignWidth="1080"
      d:DataContext="{d:DesignInstance vm:AboutViewModel}"
      Title="AboutPage">

    <Page.Resources>
        <helper:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <helper:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Stretch">

            <TextBlock Text="关于 DnD Toolkit" FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="现代化的 DnD 5E 跑团辅助工具" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="16"/>

            <!-- 版本信息卡片 -->
            <ui:Card Margin="0,20,0,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="当前版本" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding CurrentVersion}" FontSize="24" FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- 检查按钮 -->
                        <ui:Button Grid.Column="1" 
                                   Appearance="Secondary" 
                                   Icon="{ui:SymbolIcon ArrowSync24}"
                                   Content="检查更新"
                                   Command="{Binding CheckUpdateCommand}"
                                   IsEnabled="{Binding IsChecking, Converter={StaticResource InverseBoolConverter}}"/>
                    </Grid>

                    <TextBlock Text="{Binding UpdateStatus}" Foreground="{DynamicResource SystemAccentColorBrush}"/>
                </StackPanel>
            </ui:Card>

            <!-- 发现新版本时显示的内容 -->
            <ui:Card Visibility="{Binding HasNewVersion, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,5,0,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="发现新版本" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding LatestVersion}" FontSize="20"/>
                        </StackPanel>
                        <ui:Button Grid.Column="1" 
                                   Content="去 GitHub 下载" 
                                   Icon="{ui:SymbolIcon Globe24}"
                                   Appearance="Light"
                                   Command="{Binding GoToDownloadCommand}"/>
                    </Grid>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" CornerRadius="4" Padding="10">
                        <StackPanel>
                            <TextBlock Text="更新日志：" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding ReleaseNotes}" TextWrapping="Wrap" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ui:Card>

            <!-- 版权/开源信息 -->
            <ui:CardAction Icon="{ui:SymbolIcon Code24}" Command="{Binding GoToDownloadCommand}" Margin="0,5,0,0">
                <StackPanel>
                    <TextBlock Text="Git仓库地址" FontWeight="SemiBold"/>
                    <TextBlock Text="https://github.com/cadros1/DndToolkit" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </ui:CardAction>

            <!-- 1. 许可 (PolyForm Noncommercial) -->
            <ui:CardExpander Icon="{ui:SymbolIcon Certificate24}" Margin="0,5,0,0">
                <ui:CardExpander.Header>
                    <StackPanel>
                        <TextBlock Text="DnD Toolkit" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="许可协议" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardExpander.Header>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Copyright © 2025 cadros1" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <TextBlock Text="本软件源代码采用 PolyForm Noncommercial License 1.0.0 进行授权。" 
                       Foreground="{DynamicResource SystemAccentColorBrush}" FontWeight="Bold"/>

                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" FontSize="13" LineHeight="20">
                        <Run FontWeight="Bold">允许：</Run><LineBreak/>
                        您有权免费使用、复制、修改和分发本软件及其源代码。<LineBreak/><LineBreak/>
                        <Run FontWeight="Bold">禁止：</Run><LineBreak/>
                        您不得将本软件用于任何<Run FontWeight="Bold">商业目的</Run>。包括但不限于：<LineBreak/>
                        1. 出售本软件或其衍生作品。<LineBreak/>
                        2. 将本软件作为付费服务的一部分提供。<LineBreak/><LineBreak/>
                        <Run FontWeight="Bold">义务 (Obligations)：</Run><LineBreak/>
                        分发本软件或其修改版本时，必须保留原始版权声明和本许可协议文本。
                    </TextBlock>

                    <!-- 协议链接按钮 -->
                    <ui:HyperlinkButton NavigateUri="https://polyformproject.org/licenses/noncommercial/1.0.0/"
                        Foreground="{DynamicResource SystemAccentColorBrush}"
                        Margin="0,10,0,0" Icon="{ui:SymbolIcon Symbol='Link24'}">
                        PolyForm Noncommercial 1.0.0
                    </ui:HyperlinkButton>
                </StackPanel>
            </ui:CardExpander>

            <!-- 2. 第三方开源声明 (MIT/Apache) -->
            <ui:CardExpander Icon="{ui:SymbolIcon CodeBlock24}" Margin="0,5,0,0">
                <ui:CardExpander.Header>
                    <TextBlock Text="第三方开源项目声明" FontWeight="Bold" FontSize="14"/>
                </ui:CardExpander.Header>
                <StackPanel Margin="0,5">
                    <TextBlock Text="本软件使用了以下开源项目：" Margin="0,0,0,15" Foreground="Gray"/>

                    <!-- PdfSharp -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:HyperlinkButton NavigateUri="https://www.pdfsharp.com/" Icon="{ui:SymbolIcon Link24}">
                            PDFsharp-WPF
                        </ui:HyperlinkButton>
                        <TextBlock Text="MIT License" Grid.Column="1" VerticalAlignment="Center" Foreground="Gray"/>
                    </Grid>
                    <Border Height="1" Background="{DynamicResource CardStrokeColorDefaultBrush}" Margin="0,0,0,10"/>

                    <!-- WPF-UI -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:HyperlinkButton NavigateUri="https://wpfui.lepo.co/" Icon="{ui:SymbolIcon Link24}">
                            WPF-UI
                        </ui:HyperlinkButton>
                        <TextBlock Text="MIT License" Grid.Column="1" VerticalAlignment="Center" Foreground="Gray"/>
                    </Grid>
                    <Border Height="1" Background="{DynamicResource CardStrokeColorDefaultBrush}" Margin="0,0,0,10"/>

                    <!-- CommunityToolkit.Mvvm -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:HyperlinkButton NavigateUri="https://learn.microsoft.com/zh-cn/dotnet/communitytoolkit/mvvm/" Icon="{ui:SymbolIcon Link24}">
                            CommunityToolkit.Mvvm
                        </ui:HyperlinkButton>
                        <TextBlock Text="MIT License" Grid.Column="1" VerticalAlignment="Center" Foreground="Gray"/>
                    </Grid>

                </StackPanel>
            </ui:CardExpander>

        </StackPanel>
    </Grid>
</Page>