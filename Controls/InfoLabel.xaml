<UserControl x:Class="DnDToolkit.Controls.InfoLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             x:Name="Root">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,4">

        <!-- 1. 显示的标题文字 -->
        <TextBlock Text="{Binding Label, ElementName=Root}" 
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                   FontSize="12"
                   VerticalAlignment="Center"/>

        <!-- 2. 信息图标 -->
        <ui:SymbolIcon Symbol="Info16" 
                       FontSize="12" 
                       Margin="5,0,0,0" 
                       Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                       VerticalAlignment="Center"
                       ToolTipService.InitialShowDelay="0"
                       ToolTipService.ShowDuration="10000"
                       Tag="{Binding ElementName=Root}">

            <ui:SymbolIcon.ToolTip>
                <ToolTip>
                    <StackPanel MaxWidth="250"
                                DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource AncestorType=ToolTip}}">
                        <!-- 提示框标题 -->
                        <TextBlock Text="{Binding Title}" 
                                   FontWeight="Bold" Margin="0,0,0,5"/>

                        <!-- 提示框正文 -->
                        <TextBlock Text="{Binding Description}" 
                                   TextWrapping="Wrap" 
                                   FontSize="11"
                                   Foreground="Gray"/>
                    </StackPanel>
                </ToolTip>
            </ui:SymbolIcon.ToolTip>
        </ui:SymbolIcon>
    </StackPanel>
</UserControl>